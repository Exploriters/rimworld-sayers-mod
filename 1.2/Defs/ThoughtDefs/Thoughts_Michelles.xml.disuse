    <defName>Disfigured_Michelles</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>ThoughtWorker_Disfigured</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>毁容</label>
        <baseOpinionOffset>-65</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>BodyPuristDisgust_Michelles</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>ThoughtWorker_BodyPuristDisgust</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>身体纯粹主义者厌恶</label>
        <baseOpinionOffset>-16</baseOpinionOffset>
      </li>
      <li>
        <label>身体纯粹主义者厌恶</label>
        <baseOpinionOffset>-32</baseOpinionOffset>
      </li>
      <li>
        <label>身体纯粹主义者厌恶</label>
        <baseOpinionOffset>-48</baseOpinionOffset>
      </li>
      <li>
        <label>身体纯粹主义者厌恶</label>
        <baseOpinionOffset>-64</baseOpinionOffset>
      </li>
      <li>
        <label>身体纯粹主义者厌恶</label>
        <baseOpinionOffset>-80</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  <ThoughtDef>
    <defName>HoldingMePrisoner_Michelles</defName>
    <thoughtClass>Thought_SituationalSocial</thoughtClass>
    <workerClass>ThoughtWorker_ImprisonedByFaction</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>囚禁过我</label>
        <baseOpinionOffset>-40</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
</Defs>