<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="RoughPlantBase">
    <defName>Herb_Broom</defName>
    <label>金雀花</label>
    <description>一些金雀花，磨成膏后可以用来治疗伤口</description>
    <stackLimit>200</stackLimit>
    <graphicData>
      <texPath>Things/Item/HerbsPlan/Herb/Broom</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1</MarketValue>
      <Mass>0.014</Mass>
      <Flammability>1.5</Flammability>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>60</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <ingestible></ingestible>
  </ThingDef>
  <!--====-->
  <ThingDef ParentName="MedicineBase">
    <defName>Medicine_BroomPaste</defName>
    <label>金雀花膏</label>
    <description>由金雀花磨成的膏状物，可以用来治疗伤口</description>
    <graphicData>
      <texPath>Things/Item/HerbsPlan/Medicine/BroomPaste</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <MarketValue>15</MarketValue>
      <Mass>0.35</Mass>
      <Flammability>1.3</Flammability>
      <MedicalPotency>0.75</MedicalPotency>
      <MedicalQualityMax>0.85</MedicalQualityMax>
      <DeteriorationRate>6</DeteriorationRate>
    </statBases>
    <tickerType>Rare</tickerType>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>150</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
</Defs>